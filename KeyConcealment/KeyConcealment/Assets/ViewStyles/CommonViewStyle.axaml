<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

   <!-- buttons common style -->
        
    <Style Selector="Button">
        <Setter Property="Background" Value="#61ABC6"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="Button:disabled /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="#CFDDF0"/>
        <Setter Property="Background" Value="#A4BBDA"/>
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#BCD2EE"/>
    </Style>

    <!-- ***************** -->

    <!-- Border to create shadowed box -->
    <Style Selector = "Border.Box">
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="BoxShadow" Value="5 5 10 0 DarkGray"/>        
    </Style>
    <!-- **************************************** -->

    <Style Selector="Separator">
        <Setter Property="Margin" Value="25 25 25 25"/>
    </Style>
</Styles>

<Styles 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Stack panels -->
    <Style Selector = "StackPanel">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Spacing" Value="10"/>
    </Style>

    <!-- **************************************** -->


    <!-- Buttons -->
    
    <Style Selector="Button#ResetButton">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="Background" Value="#DF3716"/>
    </Style>

    <Style Selector="Button#ResetButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#ED6145"/>
    </Style>

    <!-- **************************************** -->
    
</Styles>
